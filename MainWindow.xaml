<Window x:Class="GenesysApiExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GenesysApiExplorer"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GenesysApiExplorer" xmlns:viewmodels="clr-namespace:GenesysApiExplorer.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:EndpointViewModel, IsDesignTimeCreatable=True}"
        Title="Genesys API Explorer" Height="600" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <!-- Define a top row for toolbar and main row for content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar row -->
            <RowDefinition Height="*"/>
            <!-- Main content row -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Left pane width -->
            <ColumnDefinition Width="*"/>
            <!-- Right pane -->
        </Grid.ColumnDefinitions>

        <!-- Top toolbar with Login and favorite toggle -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5">
            <Button Content="Login" Command="{Binding LoginCommand}" Width="80" Margin="0,0,5,0"/>
            <Button Content="Toggle Favorite" Command="{Binding ToggleFavoriteCommand}" Width="120"/>
        </StackPanel>

        <!-- TreeView for API navigation (left pane) -->
        <TreeView Grid.Column="0"
          ItemsSource="{Binding Categories}"
          SelectedItemChanged="TreeView_SelectedItemChanged">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type vm:ApiCategory}" ItemsSource="{Binding Endpoints}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/folder.png" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type vm:ApiEndpoint}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â˜…" Foreground="Gold" Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                        <TextBlock Text="{Binding DisplayName}" Margin="2,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
        <TabControl Grid.Row="1" Grid.Column="1" Margin="10">
            <!-- 1) Form tab -->
            <TabItem Header="Request Body">
                <ScrollViewer>
                    <StackPanel>
                        <!-- Form fields generated from schema -->
                <ItemsControl d:DataContext="{d:DesignInstance Type=vm:EndpointViewModel}" ItemsSource="{Binding FormFields}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}" />
                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Width="300" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <!-- Submit button -->
                        <Button Content="Submit" Command="{Binding SubmitCommand}" 
                    Width="100" Margin="5"/>
                        <TextBox Text="{Binding ResponseText}" IsReadOnly="True" 
                     AcceptsReturn="True" VerticalScrollBarVisibility="Visible" 
                     Height="150" Margin="5"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Schema JSON">
                <TextBox
    Text="{Binding CurrentOperationJson, Mode=OneWay}"
    FontFamily="Consolas" IsReadOnly="True"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
    HorizontalScrollBarVisibility="Auto"
    Margin="5" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
